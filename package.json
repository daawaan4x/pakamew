{
	"name": "pakamew",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"build": "pnpm -r --parallel --filter @pakamew/web --filter @pakamew/server run build",
		"build:server": "pnpm --filter @pakamew/server run build",
		"build:web": "pnpm --filter @pakamew/web run build",
		"dev:server": "pnpm --filter @pakamew/server run dev",
		"dev:web": "pnpm --filter @pakamew/web run dev",
		"preview:server": "pnpm --filter @pakamew/server run preview",
		"preview:web": "pnpm --filter @pakamew/web run preview",
		"eslint": "eslint .",
		"eslint:fix": "eslint . --fix",
		"prettier": "prettier --check .",
		"prettier:write": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"tsc:check": "tsc -b --noEmit",
		"tsgo:check": "tsgo -b --noEmit",
		"commitlint": "commitlint --edit",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": [
			"pnpm prettier:write"
		],
		"*.{ts,tsx,cts,mts}": [
			"pnpm eslint"
		]
	},
	"dependencies": {
		"better-auth": "^1.4.19",
		"@orpc/client": "^1.13.5",
		"dotenv": "^17.3.1",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@eslint/js": "^9.39.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.1",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20260222.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-react-dom": "^2.11.0",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"eslint-plugin-react-x": "^2.11.0",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.46.4",
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"overrides": {
			"vite": "npm:rolldown-vite@7.2.5"
		},
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"better-sqlite3",
			"esbuild",
			"prisma"
		]
	}
}
